/*
Hackerrank Question 5:-
Input will contain two integers,a and b, separated by a newline.
Using Pointer
*/

/*
Answer:-
*/

#include <stdio.h>
#include <cstdlib>

void update(int *a,int *b) {
    int temp=*a;
    *a=*a+*b;
    *b=abs(temp-*b);
       
}

int main() {
    int a, b;
    int *pa = &a, *pb = &b;
    
    scanf("%d %d", &a, &b);
    update(pa, pb);
    printf("%d\n%d", a, b);

    return 0;
}
